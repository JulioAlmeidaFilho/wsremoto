package repeticao;

import javax.swing.JOptionPane;

public class ExercicioRepeticao2 {

	public static void main(String[] args) {
		/*
		 * Monte um programa que solicite a idade e o nome das pessoas. 
		A aplicação continuará perguntando nome e idade enquanto o usuário afirmar que deseja continuar.
		Ao terminar, a aplicação deverá exibir:
		- a quantidade de pessoas maiores de idade e 
		- a média entre todas as idades que foram digitadas. 
		- a pessoa mais experiente (nome e idade)
		- a pessoa mais jovem (nome e idade)
		 */

		int num1 = Integer.parseInt(JOptionPane.showInputDialog("Jogador 1: Digite o número:"));
		int num2 = 0;
		
		int cont = 0;
				
		do {
			num2 = Integer.parseInt(JOptionPane.showInputDialog("Jogador 2: Qual número o Jogador 1 Digitou?"));
			
			if (num1>num2) {
				System.out.println("Você está chutando baixo!");
			} else if (num2>num1) {
				System.out.println("Você está chutando alto!");
			}
			
			cont = cont +1;
						
		}while (num1 !=num2);
		
		System.out.printf("\nParabéns! Você acertou em %d tentativas.", cont);
		
		
	}
		
}
